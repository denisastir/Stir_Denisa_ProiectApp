<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 xmlns:local="clr-namespace:Stir_Denisa_ProiectApp"
 x:Class="Stir_Denisa_ProiectApp.ListPage"
 Title="ListPage">
    <StackLayout Margin="20">
        <Editor Placeholder="Enter the items you would like to order."
 Text="{Binding Description}"
 HeightRequest="100"  >
 <Editor.Behaviors>
 <local:ValidationBehaviour />
 </Editor.Behaviors>
 </Editor>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Save"
 Clicked="OnSaveButtonClicked" />
            <Button Grid.Column="1"
 Text="Delete"
 Clicked="OnDeleteButtonClicked"/>
        </Grid>
        <ListView x:Name="listView"
 Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add item to buy" MaximumWidthRequest="300"
Clicked="OnChooseButtonClicked"/>
    </StackLayout>
</ContentPage>